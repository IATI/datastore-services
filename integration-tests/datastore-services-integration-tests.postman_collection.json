					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Orchestration Response Status code is 202\", function () {",
							"    pm.response.to.have.status(202);",
							"});",
							"",
							"const jsonData = pm.response.json();",
							"",
							"function statusTests(response) {",
							"    const statusResponse = response.json()",
							"    pm.collectionVariables.set(\"statusResponseBody\", statusResponse, 'json');",
							"}",
							"",
							"function statusRequest() {",
							"    pm.sendRequest(jsonData.statusQueryGetUri, function (err, response) { ",
							"        if (response.code === 200) {",
							"            statusTests(response)",
							"        } else if (response.code === 202) {",
							"            const pauseTime = Number(response.headers.find(h => h.key == \"Retry-After\").value)",
							"            setTimeout(() => statusRequest(), pauseTime * 1000)",
							"        }",
							"    })",
							"}",
							"",
							"statusRequest()"
						]
					}
				}
